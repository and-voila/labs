datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

model Team {
  id        String    @id @default(cuid())
  createdAt DateTime  @default(now()) @map(name: "created_at")
  updatedAt DateTime? @updatedAt @map(name: "updated_at")

  name       String  @unique
  slug       String  @unique
  image      String?
  isPersonal Boolean @default(false)

  members          Membership[]
  subscription     StripeSubscription?
  stripeCustomerId StripeCustomer?
  invitations      TeamInvitation[]
  sites            Site[]
  posts            Post[]

  @@index([name, slug])
  @@index([slug])
  @@map(name: "teams")
}

enum MembershipRole {
  MEMBER
  ADMIN
  OWNER
}

model Membership {
  id        String    @id @default(cuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt

  role     MembershipRole @default(MEMBER)
  accepted Boolean        @default(false)

  teamId String
  userId String

  team Team @relation(fields: [teamId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, teamId])
  @@index([teamId])
  @@index([userId])
  @@map("memberships")
}

model TeamInvitation {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email       String
  name        String?
  teamId      String
  teamSlug    String
  invitedById String
  token       String   @unique
  expires     DateTime

  role MembershipRole @default(MEMBER)

  team      Team @relation(fields: [teamId], references: [id], onDelete: Cascade)
  invitedBy User @relation(fields: [invitedById], references: [id], onDelete: Cascade)

  @@unique([teamId, email])
  @@index([teamId])
  @@map("team_invitations")
}

model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now()) @map(name: "created_at")
  updatedAt DateTime @updatedAt @map(name: "updated_at")

  name          String?
  displayName   String?   @unique
  username      String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?

  teams       Membership[]
  accounts    Account[]
  sessions    Session[]
  sites       Site[]
  posts       Post[]
  invitations TeamInvitation[]
  admin       Admin?

  @@index([email])
  @@index([displayName])
  @@map(name: "users")
}

model Admin {
  id     String    @id @default(cuid())
  userId String    @unique
  role   AdminRole

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map(name: "admins")
}

enum AdminRole {
  ADMIN
  SUPERADMIN
}

model Account {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now()) @map(name: "created_at")
  updatedAt DateTime @default(now()) @map(name: "updated_at")

  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
  @@map(name: "accounts")
}

model Session {
  id      String   @id @default(cuid())
  expires DateTime

  sessionToken String @unique

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map(name: "sessions")
}

model VerificationToken {
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt

  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map(name: "verification_tokens")
}

model Post {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now()) @map(name: "created_at")
  updatedAt DateTime @updatedAt @map(name: "updated_at")

  title         String  @db.Text
  description   String  @db.Text
  content       String? @db.Text
  slug          String  @default(cuid())
  image         String? @default("https://xa09cquxuk1zok5f.public.blob.vercel-storage.com/IoGBwOC-9CvtiYRSGCNZAuY0UAemMZ0UzFtuZ7.jpeg") @db.Text
  imageBlurhash String? @default("data:image/png;base64,") @db.Text
  published     Boolean @default(false)
  userId        String
  teamId        String?
  siteId        String

  site Site  @relation(fields: [siteId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  user User? @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  team Team? @relation(fields: [teamId], references: [id])

  @@unique([slug, siteId])
  @@index([userId])
  @@index([siteId])
  @@map(name: "posts")
}

model Site {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name          String
  description   String  @db.Text
  logo          String? @default("https://xa09cquxuk1zok5f.public.blob.vercel-storage.com/SgQEI5B-KRu6KULIVq8OXj0eKRn7drD4RRCGf1.png") @db.Text
  image         String? @default("https://xa09cquxuk1zok5f.public.blob.vercel-storage.com/qbRcbkW-GSx1IuBuKyVEbOJkFlkxBCVaCy5qfD.jpeg") @db.Text
  imageBlurhash String? @default("data:image/png;base64,") @db.Text
  subdomain     String? @unique
  customDomain  String? @unique
  font          String  @default("font-cal")
  message404    String? @default("Oops! You've found a page that doesn't exist.") @db.Text
  teamId        String
  userId        String?

  user     User?     @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  posts    Post[]
  team     Team      @relation(fields: [teamId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  metaData SiteMeta?

  @@index([userId])
  @@index([teamId])
  @@map(name: "sites")
}

model SiteMeta {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  siteId            String  @unique
  title             String?
  description       String? @db.Text
  author            String?
  creator           String?
  category          String?
  keywords          String?
  socialNetworkUrls Json

  site Site @relation(fields: [siteId], references: [id], onDelete: Cascade)

  @@map(name: "site_meta")
}

enum SubscriptionStatus {
  TRIALING
  ACTIVE
  PAUSED
  CANCELED
  PAST_DUE
  UNPAID
  INCOMPLETE
  EXPIRED
}

model StripeSubscription {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  teamId String @unique

  stripeCustomerId       String?             @unique @map(name: "stripe_customer_id")
  stripeSubscriptionId   String?             @unique @map(name: "stripe_subscription_id")
  status                 SubscriptionStatus?
  stripePriceId          String?             @map(name: "stripe_price_id")
  stripeCurrentPeriodEnd DateTime?           @map(name: "stripe_current_period_end")

  team Team @relation(fields: [teamId], references: [id])

  @@index([teamId])
  @@map(name: "stripe_subscriptions")
}

model StripeCustomer {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId           String? @unique
  teamId           String  @unique
  stripeCustomerId String  @unique

  team Team @relation(fields: [teamId], references: [id])

  @@index([userId])
  @@index([teamId])
  @@map(name: "stripe_customers")
}
