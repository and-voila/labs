datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL") // uses prisma accelerate
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

model Organization {
  id   String @id @default(cuid())
  name String
  slug String @unique

  organizationCode String @unique @default(cuid())
  inviteCode       String @unique @default(cuid())

  primaryDomain String? @unique
  ownerId       String
  logo          String? @default("https://xa09cquxuk1zok5f.public.blob.vercel-storage.com/eRsvMz1-NM55IyismSKxhuL2Z7AfAEXQ7Qilts.jpeg") @db.Text

  createdAt DateTime  @default(now())
  deletedAt DateTime?
  updatedAt DateTime  @updatedAt

  stripeSubscriptionId String? @unique
  stripeCustomerId     String? @unique

  members            Membership[]
  sites              Site[]              @relation(name: "OrganizationToSite")
  courses            Course[]            @relation(name: "OrganizationToCourse")
  owner              User                @relation(name: "UserOwnsOrganization", fields: [ownerId], references: [id])
  stripeSubscription StripeSubscription? @relation(fields: [stripeSubscriptionId], references: [id])
  stripeCustomer     StripeCustomer?     @relation(fields: [stripeCustomerId], references: [id])

  @@index([ownerId], name: "idx_organization_owner")
  @@map(name: "organizations")
}

model Membership {
  id             String         @id @default(cuid())
  organizationId String
  userId         String
  role           MembershipRole
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt

  organization Organization @relation(fields: [organizationId], references: [id])
  user         User         @relation(fields: [userId], references: [id])

  @@unique([organizationId, userId])
  @@index([organizationId], name: "idx_membership_organization")
  @@index([userId], name: "idx_membership_user")
  @@map(name: "memberships")
}

enum MembershipRole {
  OWNER
  ADMIN
  MEMBER
  BILLING
}

enum GlobalRole {
  SUPERADMIN
  ADMIN
  TEACHER
  CUSTOMER
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now()) @map(name: "created_at")
  updatedAt     DateTime  @updatedAt @map(name: "updated_at")

  discordId           String?    @unique
  discordUsername     String?
  discordAvatar       String?
  discordServerMember Boolean?   @default(false)
  discordPremium      Boolean?   @default(false)
  role                GlobalRole @default(CUSTOMER)

  accounts           Account[]
  sessions           Session[]
  sites              Site[]
  posts              Post[]
  userApiLimit       UserApiLimit?
  memberships        Membership[]
  ownedOrganizations Organization[] @relation(name: "UserOwnsOrganization")

  @@index([email], name: "idx_user_email")
  @@index([id], name: "idx_user_id")
  @@map(name: "users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  createdAt DateTime @default(now()) @map(name: "created_at")
  updatedAt DateTime @default(now()) @map(name: "updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId], name: "idx_account_user")
  @@map(name: "accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId], name: "idx_session_user")
  @@map(name: "sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map(name: "verification_tokens")
}

model Post {
  id          String  @id @default(cuid())
  title       String? @db.Text
  description String? @db.Text
  content     String? @db.Text

  slug          String  @default(cuid())
  image         String? @default("https://xa09cquxuk1zok5f.public.blob.vercel-storage.com/IoGBwOC-9CvtiYRSGCNZAuY0UAemMZ0UzFtuZ7.jpeg") @db.Text
  imageBlurhash String? @default("data:image/png;base64,") @db.Text

  createdAt DateTime @default(now()) @map(name: "created_at")
  updatedAt DateTime @default(now()) @map(name: "updated_at")
  published Boolean  @default(false)

  site   Site?   @relation(fields: [siteId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  siteId String?
  user   User?   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId String?

  @@unique([slug, siteId])
  @@index([siteId], name: "idx_post_site")
  @@index([userId], name: "idx_post_user")
  @@map(name: "posts")
}

model Site {
  id              String   @id @default(cuid())
  name            String?
  description     String?  @db.Text
  logo            String?  @default("https://xa09cquxuk1zok5f.public.blob.vercel-storage.com/SgQEI5B-KRu6KULIVq8OXj0eKRn7drD4RRCGf1.png") @db.Text
  font            String   @default("font-cal")
  image           String?  @default("https://xa09cquxuk1zok5f.public.blob.vercel-storage.com/qbRcbkW-GSx1IuBuKyVEbOJkFlkxBCVaCy5qfD.jpeg") @db.Text
  imageBlurhash   String?  @default("data:image/png;base64,") @db.Text
  subdomain       String?  @unique
  customDomain    String?  @unique
  message404      String?  @default("Oops! You've found a page that doesn't exist.") @db.Text
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  userId          String?
  organizationId  String?
  twitterSiteOrId String?

  user         User?         @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  organization Organization? @relation(name: "OrganizationToSite", fields: [organizationId], references: [id])
  posts        Post[]

  @@index([userId], name: "idx_site_user")
  @@index([organizationId], name: "idx_site_organization")
  @@map(name: "sites")
}

model Example {
  id            Int     @id @default(autoincrement())
  name          String?
  description   String? @db.Text
  domainCount   Int?
  url           String?
  image         String? @db.Text
  imageBlurhash String? @db.Text
}

model Course {
  id             String  @id @default(cuid())
  userId         String
  organizationId String?
  title          String  @db.Text
  description    String? @db.Text
  preview        String? @db.Text
  imageUrl       String? @db.Text
  price          Float?
  isPublished    Boolean @default(false)

  categoryId String?
  category   Category? @relation(fields: [categoryId], references: [id])

  chapters    Chapter[]
  attachments Attachment[]
  purchases   Purchase[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  //@@fulltext([title])

  organization Organization? @relation(name: "OrganizationToCourse", fields: [organizationId], references: [id])

  @@index([userId], name: "idx_course_user")
  @@index([organizationId], name: "idx_course_organization")
  @@index([categoryId], name: "idx_course_category")
  @@map(name: "courses")
}

model Category {
  id      String   @id @default(cuid())
  name    String   @unique
  courses Course[]

  @@map(name: "categories")
}

model Attachment {
  id   String @id @default(cuid())
  name String
  url  String @db.Text

  courseId String
  course   Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([courseId], name: "idx_attachment_course")
  @@map(name: "attachments")
}

model Chapter {
  id          String  @id @default(cuid())
  title       String  @db.Text
  description String? @db.Text
  videoUrl    String? @db.Text
  position    Int
  isPublished Boolean @default(false)

  muxData MuxData?

  courseId String
  course   Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  userProgress UserProgress[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([courseId], name: "idx_chapter_course")
  @@map(name: "chapters")
}

model MuxData {
  id         String  @id @default(cuid())
  assetId    String
  playbackId String?

  chapterId String  @unique
  chapter   Chapter @relation(fields: [chapterId], references: [id], onDelete: Cascade)

  @@map(name: "mux-data")
}

model UserProgress {
  id     String @id @default(cuid())
  userId String

  chapterId   String
  chapter     Chapter @relation(fields: [chapterId], references: [id], onDelete: Cascade)
  isStarted   Boolean @default(false)
  isCompleted Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, chapterId])
  @@index([chapterId], name: "idx_user_progress_chapter")
  @@map(name: "user_progress")
}

model UserApiLimit {
  id        String   @id @default(cuid())
  userId    String   @unique
  count     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])

  @@map(name: "user_api_limits")
}

model StripeSubscription {
  id                     String    @id @default(cuid())
  userId                 String?   @unique
  organizationId         String?   @unique
  stripeCustomerId       String?   @unique @map(name: "stripe_customer_id")
  stripeSubscriptionId   String?   @unique @map(name: "stripe_subscription_id")
  stripePriceId          String?   @map(name: "stripe_price_id")
  stripeCurrentPeriodEnd DateTime? @map(name: "stripe_current_period_end")

  organization Organization?

  @@index([userId], name: "idx_stripe_subscription_user")
  @@index([organizationId], name: "idx_stripe_subscription_organization")
  @@map(name: "stripe_subscriptions")
}

model Purchase {
  id     String @id @default(cuid())
  userId String

  courseId String
  course   Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()

  @@unique([userId, courseId])
  @@index([courseId], name: "idx_purchases_course")
  @@map(name: "purchases")
}

model StripeCustomer {
  id               String  @id @default(cuid())
  userId           String? @unique
  organizationId   String? @unique
  stripeCustomerId String  @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  organization Organization?

  @@index([organizationId], name: "idx_stripe_customer_organization")
  @@map(name: "stripe_customers")
}
