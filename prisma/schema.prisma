datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL") // uses prisma accelerate
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

enum UserRole {
  USER
  ADMIN
}

model Team {
  id               String              @id @default(cuid())
  name             String
  slug             String              @unique
  memberships      TeamMembership[]
  subscription     StripeSubscription?
  stripeCustomerId StripeCustomer?
  invitations      TeamInvitation[]
  sites            Site[]
  courses          Course[]

  @@index([name])
  @@map(name: "teams")
}

enum TeamMemberRole {
  MEMBER
  OWNER
}

model TeamMembership {
  id         String         @id @default(cuid())
  team       Team           @relation(fields: [teamId], references: [id], onDelete: Cascade)
  teamId     String
  user       User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     String
  role       TeamMemberRole @default(MEMBER)
  is_creator Boolean        @default(false)

  @@unique([teamId, userId])
  @@index([userId])
  @@map("team_memberships")
}

model TeamInvitation {
  id        String         @id @default(cuid())
  team      Team           @relation(fields: [teamId], references: [id], onDelete: Cascade)
  teamId    String
  email     String
  role      TeamMemberRole @default(MEMBER)
  createdAt DateTime       @default(now())
  expiresAt DateTime       @updatedAt

  @@unique([teamId, email])
  @@index([email])
  @@map("team_invitations")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  displayName   String?   @unique
  email         String?   @unique
  emailVerified DateTime?
  role          UserRole  @default(USER)
  image         String?
  createdAt     DateTime  @default(now()) @map(name: "created_at")
  updatedAt     DateTime  @updatedAt @map(name: "updated_at")

  discordId           String?  @unique
  discordUsername     String?
  discordAvatar       String?
  discordServerMember Boolean? @default(false)
  discordPremium      Boolean? @default(false)

  memberships  TeamMembership[]
  accounts     Account[]
  sessions     Session[]
  sites        Site[]
  posts        Post[]
  userApiLimit UserApiLimit?

  @@index([email])
  @@index([displayName])
  @@index([role])
  @@map(name: "users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  createdAt DateTime @default(now()) @map(name: "created_at")
  updatedAt DateTime @default(now()) @map(name: "updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
  @@map(name: "accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map(name: "sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map(name: "verification_tokens")
}

model Post {
  id          String  @id @default(cuid())
  title       String? @db.Text
  description String? @db.Text
  content     String? @db.Text

  slug          String  @default(cuid())
  image         String? @default("https://xa09cquxuk1zok5f.public.blob.vercel-storage.com/IoGBwOC-9CvtiYRSGCNZAuY0UAemMZ0UzFtuZ7.jpeg") @db.Text
  imageBlurhash String? @default("data:image/png;base64,") @db.Text

  createdAt DateTime @default(now()) @map(name: "created_at")
  updatedAt DateTime @default(now()) @map(name: "updated_at")
  published Boolean  @default(false)

  site   Site?   @relation(fields: [siteId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  siteId String?
  user   User?   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId String?

  @@unique([slug, siteId])
  @@index([userId])
  @@index([siteId])
  @@map(name: "posts")
}

model Site {
  id              String   @id @default(cuid())
  name            String?
  description     String?  @db.Text
  logo            String?  @default("https://xa09cquxuk1zok5f.public.blob.vercel-storage.com/SgQEI5B-KRu6KULIVq8OXj0eKRn7drD4RRCGf1.png") @db.Text
  font            String   @default("font-cal")
  image           String?  @default("https://xa09cquxuk1zok5f.public.blob.vercel-storage.com/qbRcbkW-GSx1IuBuKyVEbOJkFlkxBCVaCy5qfD.jpeg") @db.Text
  imageBlurhash   String?  @default("data:image/png;base64,") @db.Text
  subdomain       String?  @unique
  customDomain    String?  @unique
  message404      String?  @default("Oops! You've found a page that doesn't exist.") @db.Text
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  userId          String?
  twitterSiteOrId String?

  user  User?  @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  posts Post[]

  teamId   String?
  team     Team?     @relation(fields: [teamId], references: [id], onDelete: SetNull)
  metaData SiteMeta?

  @@index([userId])
  @@index([teamId])
  @@map(name: "sites")
}

model SiteMeta {
  id     String @id @default(cuid())
  siteId String @unique
  site   Site   @relation(fields: [siteId], references: [id], onDelete: Cascade)

  title       String?
  description String? @db.Text
  author      String?
  creator     String?
  category    String?
  keywords    String?

  socialNetworkUrls Json

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map(name: "site_meta")
}

model Example {
  id            Int     @id @default(autoincrement())
  name          String?
  description   String? @db.Text
  domainCount   Int?
  url           String?
  image         String? @db.Text
  imageBlurhash String? @db.Text
}

model Course {
  id          String  @id @default(cuid())
  userId      String
  title       String  @db.Text
  description String? @db.Text
  preview     String? @db.Text
  imageUrl    String? @db.Text
  price       Float?
  isPublished Boolean @default(false)

  categoryId String?
  category   Category? @relation(fields: [categoryId], references: [id])

  chapters    Chapter[]
  attachments Attachment[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  //@@fulltext([title])

  teamId String?
  team   Team?   @relation(fields: [teamId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([categoryId])
  @@map(name: "courses")
}

model Category {
  id      String   @id @default(cuid())
  name    String   @unique
  courses Course[]

  @@map(name: "categories")
}

model Attachment {
  id   String @id @default(cuid())
  name String
  url  String @db.Text

  courseId String
  course   Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map(name: "attachments")
}

model Chapter {
  id          String  @id @default(cuid())
  title       String  @db.Text
  description String? @db.Text
  videoUrl    String? @db.Text
  position    Int
  isPublished Boolean @default(false)

  muxData MuxData?

  courseId String
  course   Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  userProgress UserProgress[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([courseId])
  @@map(name: "chapters")
}

model MuxData {
  id         String  @id @default(cuid())
  assetId    String
  playbackId String?

  chapterId String  @unique
  chapter   Chapter @relation(fields: [chapterId], references: [id], onDelete: Cascade)

  @@map(name: "mux-data")
}

model UserProgress {
  id     String @id @default(cuid())
  userId String

  chapterId   String
  chapter     Chapter @relation(fields: [chapterId], references: [id], onDelete: Cascade)
  isStarted   Boolean @default(false)
  isCompleted Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, chapterId])
  @@index([chapterId])
  @@index([userId])
  @@map(name: "user_progress")
}

model UserApiLimit {
  id        String   @id @default(cuid())
  userId    String   @unique
  count     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])

  @@map(name: "user_api_limits")
}

enum SubscriptionStatus {
  TRIALING
  ACTIVE
  PAUSED
  CANCELED
  PAST_DUE
  UNPAID
  INCOMPLETE
  EXPIRED
}

model StripeSubscription {
  id                     String              @id @default(cuid())
  userId                 String?             @unique
  stripeCustomerId       String?             @unique @map(name: "stripe_customer_id")
  stripeSubscriptionId   String?             @unique @map(name: "stripe_subscription_id")
  status                 SubscriptionStatus?
  stripePriceId          String?             @map(name: "stripe_price_id")
  stripeCurrentPeriodEnd DateTime?           @map(name: "stripe_current_period_end")
  team                   Team?               @relation(fields: [teamId], references: [id])
  teamId                 String?             @unique

  @@index([userId])
  @@index([teamId])
  @@map(name: "stripe_subscriptions")
}

model StripeCustomer {
  id               String  @id @default(cuid())
  userId           String? @unique
  team             Team?   @relation(fields: [teamId], references: [id])
  teamId           String? @unique
  stripeCustomerId String  @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([teamId])
  @@map(name: "stripe_customers")
}
